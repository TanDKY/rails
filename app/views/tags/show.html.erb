<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @tag.name %>
</p>

<p>
  <strong>Associated Posts:</strong>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Body</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.user_id %></td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= link_to 'show', post_path %>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

<%= link_to 'Back', tags_path %>
